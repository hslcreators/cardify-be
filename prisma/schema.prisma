// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  //shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode = "prisma"
}

model User {
  userId   String   @id @default(uuid())
  username String   @unique
  email    String   @unique
  password String
  joinedAt DateTime @default(now())
  token    Token?
}

model Flashcards {
  title        String
  flashcard_id String   @id @default(uuid())
  question     String
  answer       String
  topic        Topic    @relation(fields: [topicId], references: [topicId], onDelete: Cascade)
  topicId      String   @unique
  status       Status
  colorCode    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  rating       Rating   @default(NEUTRAL)
}

model Topic {
  name        String
  description String?
  topicId     String       @id @default(uuid())
  Flashcards  Flashcards[]
  /// Unique share code for the topic
  shareCode   String       @default(uuid())
  createdAt   DateTime     @default(now())
}

model Token {
  token_id   String   @id @default(uuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  token      String   @unique
  expires_at DateTime
}

enum Status {
  FULLY_UNDERSTOOD
  WORKING
  NOT_SEEN
}

enum Rating {
  VERY_BAD
  BAD
  NEUTRAL
  GOOD
  VERY_GOOD
}
